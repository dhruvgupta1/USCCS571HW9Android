<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/sCardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#ff1c272e"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/sCardImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_gradient"/>
        <TextView
            android:id="@+id/sCardMediaType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textColor="@color/white"
            android:text="media (year)"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:shadowColor="@color/black"
            android:shadowRadius="10"/>

        <TextView
            android:id="@+id/sCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="15dp"
            android:fontFamily="@font/alegreya_sans_sc_bold"
            android:shadowColor="@color/black"
            android:shadowRadius="10"
            android:text="title"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sCardStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textColor="@color/white"
            android:text="stars"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_gravity="right"
            android:shadowColor="@color/black"
            android:shadowRadius="10"
            android:drawableLeft="@drawable/ic_baseline_star_rate_24"/>
    </androidx.cardview.widget.CardView>
</FrameLayout>